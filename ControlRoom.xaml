            <Button x:Name="btnDoor9" Content="DOOR 9" Foreground="White" HorizontalAlignment="Left" Margin="1290,30,0,0" Grid.Row="1" VerticalAlignment="Top" Width="150" Height="150" FontSize="24">
                <Button.Background>
